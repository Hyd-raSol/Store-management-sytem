<h2>List</h2>
@foreach (var p in Model.Products)
{
    
    @Html.RouteLink(p.Name, new
    {
        controller = "Product",
        action = "byID",
        ID = p.ProductID
    });

    Html.RenderPartial("ProductSummary", p);
}

